@{
}
@model IEnumerable<UserManagementApp.Models.User>

<h2>Список користувачів</h2>


<a href="@Url.Action("Create", "User")" class="btn btn-success">Додати користувача</a>

<table class="table">
    <tr>
        <th>Ім'я</th>
        <th>Прізвище</th>
        <th>Email</th>
        <th>Дата реєстрації</th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.RegistrationDate.ToString("dd/MM/yyyy")</td>
            <td>
                <a href="@Url.Action("Details", "User", new { id = user.Id })" class="btn btn-info">Деталі</a>
            </td>
        </tr>
    }
</table>
